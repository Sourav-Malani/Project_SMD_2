
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused (selected) state -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="#FFA500" /> <!-- Orange background when focused -->
            <corners android:radius="8dp" />
            <stroke android:color="#FFA500" android:width="2dp" /> <!-- Orange border when focused -->
        </shape>
    </item>

    <!-- Default (not focused) state -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- White background when not focused -->
            <corners android:radius="8dp" />
            <stroke android:color="#000000" android:width="1dp" /> <!-- Black border when not focused -->
        </shape>
    </item>
</selector>


