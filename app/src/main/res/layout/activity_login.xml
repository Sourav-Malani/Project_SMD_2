<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".signup">


    <View
        android:id="@+id/ellipse_126"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-41dp"
        android:layout_marginTop="-12dp"
        android:background="@drawable/ellipse_1" />
    <!-- Auto layout, variables, and unit scale are not yet supported -->


    <ImageView
        android:id="@+id/group_17955"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="39dp"
        android:src="@drawable/back" />

    <ImageView
        android:id="@+id/ellipse_127"
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-27dp"
        android:layout_marginTop="-65dp"
        android:src="@drawable/cir" />

    <ImageView
        android:id="@+id/ellipse_128"
        android:layout_width="181dp"
        android:layout_height="181dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="317dp"
        android:layout_marginTop="-50dp"
        android:src="@drawable/cir1" />




    <TextView
        android:id="@+id/login"
        android:layout_width="247dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="26dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:text="Login"
        android:textStyle="bold"
        android:gravity="center_vertical|start"
        android:textSize="36.41sp"
        android:textColor="#000000"
        android:lineHeight="44sp"
        android:fontFamily="sans-serif"
        />


    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/login"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="22dp"
        android:gravity="top"
        android:text="E-mail"
        android:textColor="#9796A1"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/emailText"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:background="@drawable/rectangle_41"
        android:hint="Enter your email"
        android:textStyle="bold"
        android:padding="16dp" />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/emailText"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="22dp"
        android:gravity="top"
        android:text="Password"
        android:textColor="#9796A1"
        android:textSize="16sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordText"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:hint="Password"
        app:endIconMode="password_toggle"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:background="@drawable/rectangle_41"
            android:hint="Password"
            android:padding="16dp"

            />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forget"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/passwordText"
        android:text="Forget Passowrd?"
        android:textAppearance="@style/sofia_pro_medium"
        android:textSize="14sp"
        android:textColor="@color/orange"
        android:layout_marginBottom="20dp"
        />


    <Button
        android:id="@+id/loginButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@+id/forget"
        android:layout_centerHorizontal="true"
        android:text="LOGIN"
        android:backgroundTint="@color/orange"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:fontFamily="@font/sofia_pro_semibold"
        android:textAlignment="center"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:id="@+id/textbl"
        android:layout_below="@+id/loginButton"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account? "/>

        <TextView
            android:id="@+id/txt_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textAppearance="@style/sofia_pro_medium"
            android:textSize="14sp"
            android:textColor="@color/orange"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sign_in_with_text_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textbl"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#B3B3B3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Sign in with " />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#B3B3B3" />

