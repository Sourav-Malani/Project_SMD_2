<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".signup">


    <View
        android:id="@+id/ellipse_126"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-41dp"
        android:layout_marginTop="-12dp"
        android:background="@drawable/ellipse_1" />


    <ImageView
        android:id="@+id/group_17955"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="39dp"
        android:src="@drawable/back" />

    <ImageView
        android:id="@+id/ellipse_127"
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-27dp"
        android:layout_marginTop="-65dp"
        android:src="@drawable/cir" />

    <ImageView
        android:id="@+id/ellipse_128"
        android:layout_width="181dp"
        android:layout_height="181dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="317dp"
        android:layout_marginTop="-50dp"
        android:src="@drawable/cir1" />




    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="26dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="180dp"
        android:text="Registration "
        android:textStyle="bold"
        android:gravity="center_vertical|start"
        android:textSize="36.41sp"
        android:textColor="#000000"
        android:lineHeight="44sp"
        android:fontFamily="sans-serif"
        />


    <TextView
        android:id="@+id/text"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="15dp"
        android:gravity="top"
        android:text="Enter your phone number to verify your account"
        android:textColor="#9796A1"
        android:textSize="16sp" />


    <EditText
        android:id="@+id/phoneEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rectangle_41"
        android:drawableStart="@drawable/pakflag"
        android:drawablePadding="8dp"
        android:gravity="start"
        android:hint="(+92)"
        android:inputType="phone"
        android:paddingStart="10dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:textSize="18sp" />


    <Button
        android:id="@+id/signUpButton"
        android:layout_below="@+id/phoneEditText"
        android:layout_marginTop="20dp"
        android:layout_width="248dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:text="SEND"
        android:backgroundTint="@color/orange"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:fontFamily="@font/sofia_pro_semibold"
        android:textAlignment="center"

        />

</RelativeLayout>