<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".signup">


    <View
        android:id="@+id/ellipse_126"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-41dp"
        android:layout_marginTop="-12dp"
        android:background="@drawable/ellipse_1" />

    <ImageView
        android:id="@+id/ellipse_127"
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-15dp"
        android:layout_marginTop="-55dp"
        android:src="@drawable/cir" />

    <ImageView
        android:id="@+id/ellipse_128"
        android:layout_width="181dp"
        android:layout_height="181dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="317dp"
        android:layout_marginTop="-50dp"
        android:src="@drawable/cir1" />

    <!-- XML layout file (activity_main.xml) -->
    <TextView
        android:id="@+id/sign_up"
        android:layout_width="129dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="26dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:text="Sign Up"
        android:textSize="36.41sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="top" />



    <TextView
        android:id="@+id/full_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/sign_up"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="22dp"
        android:gravity="top"
        android:text="Full name"
        android:textColor="#9796A1"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/usernameText"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/full_name"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:background="@drawable/rectangle_41"
        android:hint="Enter your name"
        android:textStyle="bold"
        android:padding="16dp" />


    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/usernameText"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="22dp"
        android:gravity="top"
        android:text="E-mail"
        android:textColor="#9796A1"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/emailText"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:background="@drawable/rectangle_41"
        android:hint="Enter your email"
        android:textStyle="bold"
        android:padding="16dp" />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/emailText"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="22dp"
        android:gravity="top"
        android:text="Password"
        android:textColor="#9796A1"
        android:textSize="16sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordText"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:hint="Password"
        app:endIconMode="password_toggle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_41"
            android:inputType="textPassword"
            android:hint="Password"
            android:padding="16dp" />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/signUpButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@+id/passwordText"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="SIGN UP"
        android:backgroundTint="@color/orange"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:fontFamily="@font/sofia_pro_semibold"
        android:textAlignment="center"
    />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:id="@+id/textbl"
        android:layout_below="@+id/signUpButton"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? "/>

        <TextView
            android:id="@+id/txt_loginRedirect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="#FFA500" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/textbl2"
        android:layout_below="@+id/textbl"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Sign up with " />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#000000" />
    </LinearLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:layout_below="@+id/textbl2"
        android:paddingTop="5dp"
        >
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="30dp"
            android:layout_width="147dp"
            android:layout_height="57dp"
            app:cardElevation="8dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginLeft="20dp">
            <Button
                android:layout_width="147dp"
                android:layout_height="57dp"
                android:drawablePadding="0dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="FACEBOOK"
                android:textSize="14dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.PopupMenu.Header"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/logo_fb"
                android:padding="10dp"
                android:backgroundTint="@color/white"
                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="30dp"
            android:layout_width="147dp"
            android:layout_height="57dp"
            app:cardElevation="8dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            >
            <Button
                android:layout_width="147dp"
                android:layout_height="57dp"
                android:drawablePadding="0dp"
                android:gravity="center"
                android:text="GOOGLE"
                android:textSize="14dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.PopupMenu.Header"
                android:textColor="@color/black"
                android:drawableLeft="@drawable/icons_google"
                android:padding="10dp"
                android:backgroundTint="@color/white"
                />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>



</RelativeLayout>