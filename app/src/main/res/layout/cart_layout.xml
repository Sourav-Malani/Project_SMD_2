<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        app:cardCornerRadius="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

    <RelativeLayout
        android:id="@+id/firstCartItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:background="#F6F4F4"

        >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="16dp">

            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:scaleType="fitXY"
                android:background="@drawable/cart_pizza1" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/itemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/sofia_pro_regular"
            android:gravity="top"
            android:text="item Name"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/itemDescription"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="125dp"
            android:layout_below="@+id/itemName"
            android:text="crisp capsicum, succulent mushrooms and fresh tomatoes"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:fontFamily="@font/signika_light"
            android:layout_marginTop="5dp"
            />

        <ImageButton
            android:id="@+id/cross"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/sofia_pro_regular"
            android:gravity="top"
            android:background="@drawable/red_cross"
            android:layout_marginRight="30dp"
            />



        <TextView
            android:id="@+id/itemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="135dp"
            android:text="$14.1"
            android:textAppearance="@style/cart_price"
            android:textColor="#FE724C"
            android:textSize="14sp"
            android:layout_below="@+id/itemDescription"
            android:layout_marginTop="4dp"
            />

        <ImageButton
            android:id="@+id/btn_minus_item"
            android:layout_width="58dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="23dp"
            android:background="@drawable/group_17841" />

        <TextView
            android:id="@+id/itemCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/sofia_pro_semibold"
            android:textSize="16sp"
            android:text="02" />


        <ImageButton
            android:id="@+id/btn_plus_item"
            android:layout_width="58dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="335dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/group_17840" />

    </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>