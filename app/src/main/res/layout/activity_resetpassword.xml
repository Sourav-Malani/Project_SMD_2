<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.ass2.StarterScreens.signup">


    <View
        android:id="@+id/ellipse_126"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-41dp"
        android:layout_marginTop="-12dp"
        android:background="@drawable/ellipse_1" />


    <ImageView
        android:id="@+id/group_17955"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="39dp"
        android:src="@drawable/back" />

    <ImageView
        android:id="@+id/ellipse_127"
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-27dp"
        android:layout_marginTop="-65dp"
        android:src="@drawable/cir" />

    <ImageView
        android:id="@+id/ellipse_128"
        android:layout_width="181dp"
        android:layout_height="181dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="317dp"
        android:layout_marginTop="-50dp"
        android:src="@drawable/cir1" />




    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="26dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="180dp"
        android:text="Reset Password "
        android:textStyle="bold"
        android:gravity="center_vertical|start"
        android:textSize="36.41sp"
        android:textColor="#000000"
        android:lineHeight="44sp"
        android:fontFamily="sans-serif"
        />


    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="15dp"
        android:gravity="top"
        android:text="Please enter your email address to request a password reset"
        android:textColor="#9796A1"
        android:textSize="16sp" />




    <EditText
        android:id="@+id/emailText"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="27dp"
        android:background="@drawable/rectangle_41"
        android:hint="Enter your email"
        android:textStyle="bold"
        android:padding="16dp" />

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="200dp"
        android:layout_below="@+id/emailText"
        android:layout_height="70dp"
        android:textAlignment="center"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="22dp"
        android:text="RESET PASSWORD"
        android:backgroundTint="@color/orange"
        android:textColor="#FFFFFF"
        />

</RelativeLayout>